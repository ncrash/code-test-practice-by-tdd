<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE  struts-config  PUBLIC    
"-//Apache  Software  Foundation//DTD  Struts  Configuration  1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>
	<action-mappings>
		<action path="/Index" type="com.ncrash.code.web.struts.IndexAction">
			<forward name="success" path="/jsp/struts/index.jsp" />
		</action>
		
		<action path="/Html-Validator" type="com.ncrash.code.web.struts.ValidatorAction">
			<forward name="success" path="/jsp/html-validator/result.jsp" />
		</action>
	</action-mappings>
</struts-config>
